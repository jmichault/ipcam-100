#!/bin/sh
. /etc/profile >/dev/null 2>&1
what="$1"
shift
data="$@"
CURL="${SDCARD}/bin/curl"

. JsAlVar ${SDCARD}/www/ipcam/config/movo.conf DetektoDatenoj

sendMessage() {
  text="$(echo "${@}" | sed 's:\\n:\n:g')"
  echo "Sending message: $text"

  $CURL --capath /etc/ssl/certs -s \
    -X POST \
    https://api.telegram.org/bot${SciiTelToken}/sendMessage \
    --data-urlencode "text=$text" \
    -d "chat_id=${SciiTelChatId}"
}

sendFile() {
  echo "Sending file: $1"
  $CURL --capath /etc/ssl/certs -s \
    -X POST \
    https://api.telegram.org/bot${SciiTelToken}/sendDocument \
    -F chat_id="${SciiTelChatId}" \
    -F document=@"$1"
}

sendPhoto() {
  caption="$(hostname)-$(date +"%d%m%Y_%H%M%S")"
  echo "Sending Photo: $1 $caption" >> /tmp/telegram.log
  $CURL --capath /etc/ssl/certs -s \
    -X POST \
    https://api.telegram.org/bot${SciiTelToken}/sendPhoto \
    -F chat_id="${SciiTelChatId}" \
    -F photo="@${1}" \
    -F caption="${caption}"
}

[ "$what" == "m" ] && sendMessage $data
[ "$what" == "f" ] && sendFile $data
[ "$what" == "p" ] && sendPhoto $data
[ -z "$what" ] && echo -e "$0 <m|f|p> <data>\n m: message\n f: file\n p: picture"
