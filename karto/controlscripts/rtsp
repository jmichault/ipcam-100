#!/bin/sh
. /etc/profile >/dev/null 2>&1

#### KOMENCO DE MASTRUMA KAPLINIO
# Mallonga-priskribo: RTSP servilo. Ankaŭ administras movodetekton.
# Komenco: 10
# Retejo-administrita: ies
#### FINO DE MASTRUMA KAPLINIO

SERVICE_NAME="RTSP Server"
PIDFILE="/var/run/rtsp_server.pid"
LOGDIR="${SDCARD}/log"
LOGPATH="$LOGDIR/rtsp_server.log"
export LD_LIBRARY_PATH="${SDCARD}/lib:/thirdlib:/system/lib/:/ipc/lib/"

CONFPATH=${SDCARD}/www/ipcam/config

status()
{
  pid="$(cat "$PIDFILE" 2>/dev/null)"
  if [ "$pid" ]; then
    # Prints PID: $pid if exists and returns 0(no error) else returns 1(error condition)
    kill -0 "$pid" >/dev/null && echo "PID: $pid" || return 1
  fi
}

start()
{
  # krei hazardan uzanton por interna uzo
  lokuz=$(cat ${SDCARD}/config/rtsp.lok|sed "s/:.*//")
  lokpas=$(cat ${SDCARD}/config/rtsp.lok|sed "s/.*://")
  if [ "x$lokuz" = "x" -o "x$lokpas" = "x" ] ; then
    lokuz=$(dd if=/dev/random bs=24 count=1 2>/dev/null|busybox sha1sum|sed 's/ *- *//')
    lokpas=$(dd if=/dev/random bs=24 count=1 2>/dev/null|busybox sha1sum|sed 's/ *- *//')
    echo "$lokuz:$lokpas" >${SDCARD}/config/rtsp.lok
  fi
  if ! grep "^$lokuz:" "${SDCARD}/config/rtsp.user" >/dev/null ; then
    grep -v "^$lokuz:" "${SDCARD}/config/rtsp.user" >/tmp/htpasstmp.$$                                                 
    echo "$lokuz:$(echo -n "$lokuz:RTSP server:$lokpas"|md5sum|sed 's/ *- *//')" >>/tmp/htpasstmp.$$
    mv /tmp/htpasstmp.$$ "${SDCARD}/config/rtsp.user"                                                                  
  fi

  if [ "$(status)" != "" ]; then
    echo "A rtsp_server is already running, please stop it or reboot"
  else
    echo "Starting rtsp_server"

    echo $(date -Iseconds)" : ================== START ===============" >> "$LOGPATH"
    echo "${SDCARD}/bin/rtsp_server ${CONFPATH}" >> "$LOGPATH"
    ${SDCARD}/bin/rtsp_server ${CONFPATH} 2>> "$LOGPATH" >> "$LOGPATH" &
    echo "$!" > "$PIDFILE"
  fi
  # kreas bash-skripto por «detectionOn.sh»
  JsAlSkr ${SDCARD}/www/ipcam/config/rtsp.conf config >${SDCARD}/config/varDetekto
  JsAlSkr ${SDCARD}/www/ipcam/config/movo.conf DetektoDatenoj >>${SDCARD}/config/varDetekto
}

stop()
{
  pid="$(cat "$PIDFILE" 2>/dev/null)"                                                   
  if [ "$pid" ]; then                                                                   
    kill "$pid"                                                         
    provo=0
    while [ -d /proc/"$pid" -a $provo -lt 30 ]                                           
    do                                                                  
     provo=$(($provo+1))
     sleep 1                                                         
    done                                                                
    if [ $provo -ge 30 ]
    then
     kill -9 "$pid"                                                         
     echo "Procezo $pid ne ĉesis !"
    fi                                                                    
  fi                                                                    
  rm "$PIDFILE" 1> /dev/null 2>&1                                       
    echo $(date -Iseconds)" : ================== STOP ===============" >> "$LOGPATH"
}

restart()
{
  stop
  start
}

if [ $# -eq 0 ]; then
  start
else
  case $1 in start|stop|status|restart)
    $1
    ;;
  esac
fi
